---
import { CollectionEntry, getCollection, render } from "astro:content";
import { NoteSchema } from "../../content.config";
import PostLayout from "../../layouts/PostLayout.astro";

export async function getStaticPaths() {
  const postEntries = await getCollection('notes', ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });
  // const postEntries = await getCollection("notes");
  return postEntries.map((entry) => ({
    params: { slug: entry.id },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<"notes">;
}

const { entry } = Astro.props;
const post: NoteSchema = entry.data;
const { Content } = await render(entry);
---

<PostLayout
  title={post.title}
  description={post.description}
  pubDate={post.pubDate}
  heroImage={post.heroImage}
  updatedDate={post.updatedDate}
  badge={post.badge}
  tags={post.tags}
>
  <Content />
</PostLayout>
